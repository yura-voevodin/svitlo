<% @title = "Графік вимкнень, #{@line.name}, #{I18n.l(DateTime.now, format: '%A, %e %b %Y')}, Івано-Франківськ" %>
<main>
  <div class="container px-4 py-2">
    <div class="row mt-2">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to 'Головна', root_url %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= @line.name %></li>
          <li class="breadcrumb-item"><%= link_to "#{l @date - 1.day, format: "%A, %e %b"}", line_path(@line), class: "" %></li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="my-2"><span class="fw-bold"><%= l @date, format: "%A, %e %b %Y" %></span></div>
    </div>
    <% if @day.present? %>
    <div class="row">
      <div class="col">
        <div class="alert alert-warning" role="alert">
          <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Можливі зміни в графіку</h4>
          <span class="fst-italic text-secondary-emphasis">Орієнтовний графік на завтра, на основі попередніх даних Прикарпаттяобленерго.</span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-6 col-md-3 col-lg-2">
        <% for index in 0..11 %>
          <%= render "layouts/next_row", index: index %>
        <% end %>
      </div>
      <div class="col-6 col-md-3 col-lg-2">
        <% for index in 12..23 %>
          <%= render "layouts/next_row", index: index %>
        <% end %>
      </div>
      <div class="col-12 col-md-6 col-lg-4">
        <%= render "layouts/statistics_table" %>
      </div>
    </div>
    <% else %>
    <div class="row"><div class="alert alert-secondary" role="alert">Дані відсутні, чекаємо інформацю від Прикарпаттяобленерго</div></div>
    <% end %>
    <div class="row mt-4"></div>
    <%= render "layouts/footer" %>
  </main>
